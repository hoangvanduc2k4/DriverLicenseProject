<Window x:Class="DriverLicenseApp.ExamPolice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="ExamPolice" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Exam List" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="36" 
               FontWeight="Bold"/>

        <!-- Nội dung chính: danh sách và form -->
        <Grid Grid.Row="1">
            
            <!-- Panel danh sách -->
            <Grid x:Name="listPanel">
                
                <DataGrid x:Name="ExamDataGrid" AutoGenerateColumns="False" 
                          ItemsSource="{Binding}" 
                          CanUserAddRows="False"
                          Margin="0,56,0,0" 
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Height="Auto"
                          Width="Auto">
                    
                    <DataGrid.Columns>
                        
                        <DataGridTextColumn Header="Course Name" Binding="{Binding Course.CourseName}" Width="*"/>
                        <DataGridTextColumn Header="Exam Date"   Binding="{Binding ExamDate}" Width="*"/>
                        <DataGridTextColumn Header="Exam Time"   Binding="{Binding ExamTime}" Width="*"/>
                        <DataGridTextColumn Header="Duration (min)" Binding="{Binding DurationMinutes}" Width="*"/>
                        <DataGridTextColumn Header="Room" Binding="{Binding Room}" Width="*"/>
                        <DataGridTextColumn Header="Teacher" Binding="{Binding User.FullName}" Width="*"/>
                        
                    </DataGrid.Columns>
                    
                </DataGrid>

                <!-- Nút Add, Update, Delete -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Bottom" 
                            Margin="0,0,0,10">
                    
                    <Button Content="Add" Width="80" Height="30" Margin="5" Click="Add_Click"/>
                    <Button Content="Update" Width="80" Height="30" Margin="5" Click="Update_Click"/>
                    <Button Content="Delete" Width="80" Height="30" Margin="5" Click="Delete_Click"/>
                    
                </StackPanel>
            </Grid>

            <!-- Panel form thêm/cập nhật, ẩn mặc định -->
            <Grid x:Name="examFormPanel" Visibility="Collapsed" Background="LightGray">
                <Grid Margin="10">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Course:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbCourseForm" Grid.Row="0" Grid.Column="1" />

                    <Label Grid.Row="1" Grid.Column="0" Content="Exam Date:" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpExamDateForm" Grid.Row="1" Grid.Column="1" />

                    <Label Grid.Row="2" Grid.Column="0" Content="Exam Time (HH:mm):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtExamTimeForm" Grid.Row="2" Grid.Column="1" />

                    <Label Grid.Row="3" Grid.Column="0" Content="Duration (min):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDurationForm" Grid.Row="3" Grid.Column="1" />

                    <Label Grid.Row="4" Grid.Column="0" Content="Room:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtRoomForm" Grid.Row="4" Grid.Column="1" />

                    <Label Grid.Row="5" Grid.Column="0" Content="Supervisor:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbUserForm" Grid.Row="5" Grid.Column="1" />

                    <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" 
            HorizontalAlignment="Center" Margin="0,10,0,0">
                        <!-- Giảm kích thước nút xuống -->
                        <Button Content="Save" Width="70" Height="25" Margin="5" Click="FormSave_Click"/>
                        <Button Content="Cancel" Width="70" Height="25" Margin="5" Click="FormCancel_Click"/>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>



</Window>
