<Window x:Class="DriverLicenseApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="850" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <Border Background="White" CornerRadius="10" Padding="20" Width="350" Height="650"
                HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanel>
                <!-- Tiêu đề -->
                <TextBlock x:Name="TitleText" Text="Đăng Nhập" FontSize="22" FontWeight="Bold" 
                           Foreground="#1565C0" HorizontalAlignment="Center" Margin="10"/>

                <!-- Email -->
                <TextBlock Text="Email:" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10" Padding="5"
                         BorderBrush="#1976D2" BorderThickness="1"/>

                <!-- Mật khẩu -->
                <TextBlock Text="Mật khẩu:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,10" Padding="5"
                             BorderBrush="#1976D2" BorderThickness="1"/>

                <!-- Xác nhận mật khẩu (Ẩn mặc định) -->
                <TextBlock x:Name="ConfirmPasswordLabel" Text="Xác nhận mật khẩu:" FontWeight="SemiBold" Visibility="Collapsed"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0,5,0,10" Padding="5"
                             BorderBrush="#1976D2" BorderThickness="1" Visibility="Collapsed"/>

                <!-- Họ và tên -->
                <TextBlock x:Name="FullNameLabel" Text="Họ và tên:" FontWeight="SemiBold" Visibility="Collapsed"/>
                <TextBox x:Name="txtFullName" Height="30" Margin="0,5,0,10" Padding="5"
         BorderBrush="#1976D2" BorderThickness="1" Visibility="Collapsed"/>
                <!-- Chọn vai trò (Ẩn mặc định) -->
                <TextBlock x:Name="RoleLabel" Text="Vai trò:" FontWeight="SemiBold" Visibility="Collapsed"/>
                <ComboBox x:Name="cbRole" Visibility="Collapsed" Height="30">
                    <ComboBoxItem Content="Học viên" Tag="1"/>
                    <ComboBoxItem Content="Giáo viên" Tag="2"/>
                    <ComboBoxItem Content="Cảnh sát giao thông" Tag="3"/>
                    <ComboBoxItem Content="Quản trị viên" Tag="4"/>
                </ComboBox>

                <!-- Nút đăng nhập / đăng ký -->
                <Button x:Name="btnLogin" Content="Đăng nhập" Width="120" Height="35" 
                        HorizontalAlignment="Center" Cursor="Hand" Click="BtnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="Blue"/>
                            <Setter Property="BorderBrush" Value="Blue"/>
                            <Setter Property="BorderThickness" Value="2"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Chuyển đổi giữa Đăng nhập <-> Đăng ký -->
                <TextBlock HorizontalAlignment="Center" Margin="15">
                    <Run x:Name="SwitchModeText" Text="Chưa có tài khoản? " Foreground="Black"/>
                    <Run x:Name="SwitchModeAction" Text="Đăng ký" Foreground="Blue" 
                         TextDecorations="Underline" Cursor="Hand" MouseDown="ToggleRegisterMode"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
