<Window x:Class="DriverLicenseApp.CourseManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Management" Height="550" Width="800" Background="AliceBlue" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">

        <!-- Định nghĩa hàng và cột -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng mới cho ô tìm kiếm -->
            <RowDefinition Height="1.6*"/>
            <!-- DataGrid -->
            <RowDefinition Height="1*"/>
            <!-- Khu vực CRUD -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Margin="10" Grid.Row="0" Grid.Column="0">
            <!-- Nút Close nằm bên phải ngoài cùng -->
            <Button x:Name="btnClose" Content="Close" Width="80" Background="Red" Foreground="White"
            FontWeight="Bold" Margin="10,0,0,0" DockPanel.Dock="Right"
            HorizontalAlignment="Right" Click="btnClose_Click"/>

            <!-- Phần tìm kiếm nằm bên trái -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Your Courses " VerticalAlignment="Center" Margin="5 0 0 0" Foreground="red" FontSize="20" FontWeight="Bold"/>
            
            </StackPanel>
        </DockPanel>



        <!-- DataGrid hiển thị danh sách khóa học -->
        <DataGrid x:Name="dgCourses" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" 
                  Grid.Row="1" Grid.Column="0" SelectionChanged="dgCourses_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CourseId" Binding="{Binding CourseId}" Width="60"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="150"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="70"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="70"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
                <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="150"/>
                <DataGridTextColumn Header="Approved" Binding="{Binding ApprovedCount}" Width="70"/>
                <DataGridTextColumn Header="Pending" Binding="{Binding PendingCount}" Width="70"/>
                <DataGridTextColumn Header="Rejected" Binding="{Binding RejectedCount}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khung CRUD -->
        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="White" Padding="5" Margin="5"
                Grid.Row="2" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Thêm hàng cho Teacher -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Course Name:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtCourseName" Width="200" Grid.Row="1" Grid.Column="1" Margin="1"/>

                <TextBlock Text="Start Date:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                <DatePicker x:Name="dpStartDate" Width="200" Grid.Row="2" Grid.Column="1" Margin="1"/>

                <TextBlock Text="End Date:" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                <DatePicker x:Name="dpEndDate" Width="200" Grid.Row="3" Grid.Column="1" Margin="1"/>

                <TextBlock Text="Status:" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                <ComboBox x:Name="cbStatus" Width="200" Grid.Row="4" Grid.Column="1" Margin="1">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Closed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>


 

                <!-- Các nút CRUD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="2" Margin="10">
                    <Button x:Name="btnAdd" Content="Add" Width="100" Margin="5" Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Update" Width="100" Margin="5" Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5" Click="btnDelete_Click"/>
                    <Button x:Name="btnRefresh" Content="Refresh" Width="100" Margin="5" Click="btnRefresh_Click"/>
                    <Button x:Name="btnRegistration" Content="Registration" Width="100" Margin="5" Click="btnRegistration_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
