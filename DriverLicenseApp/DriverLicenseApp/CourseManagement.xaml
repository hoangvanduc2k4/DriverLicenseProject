<Window x:Class="DriverLicenseApp.CourseManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Course Management" 
        Height="842" 
        Width="716" 
        Background="#CEFAE3" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.Resources>
            <!-- Style cho TextBlock (label) -->
            <Style x:Key="CustomLabelStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="Margin" Value="0,0,5,5"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Style cho TextBox -->
            <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="5,5,0,5"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#006B38"/>
            </Style>

            <!-- Style cho DatePicker -->
            <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="5,5,0,5"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#006B38"/>
            </Style>

            <!-- Style cho ComboBox -->
            <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Margin" Value="5,5,0,5"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#006B38"/>
            </Style>

            <!-- Style cho Button -->
            <Style x:Key="CustomButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="35"/>
                <Setter Property="Background" Value="#B2E3C4"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A1D1B7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#8CB89F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style riêng cho nút Close -->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
                <Setter Property="Background" Value="#FF6B6B"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF8787"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF5252"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style cho DataGrid -->
            <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>

        <!-- Định nghĩa hàng và cột -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title and Close button -->
            <RowDefinition Height="Auto"/>
            <!-- Filter section -->
            <RowDefinition Height="2*"/>
            <!-- DataGrid -->
            <RowDefinition Height="1.5*"/>
            <!-- CRUD area -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tiêu đề và nút Close -->
        <DockPanel Grid.Row="0" Margin="10">
            <Button x:Name="btnClose" 
                    Content="Close" 
                    Style="{StaticResource CloseButtonStyle}" 
                    DockPanel.Dock="Right" 
                    Click="btnClose_Click"/>
            <TextBlock Text="Your Courses" 
                       Foreground="#006B38" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Filter Section -->
        <Border Grid.Row="1" 
                BorderThickness="1" 
                BorderBrush="#006B38" 
                CornerRadius="5" 
                Background="White" 
                Padding="10" 
                Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Filter Status:" 
                          Style="{StaticResource CustomLabelStyle}" 
                          Grid.Column="0"/>
                <ComboBox x:Name="cbFilterStatus" 
                         Style="{StaticResource CustomComboBoxStyle}" 
                         Width="150" 
                         Grid.Column="1"
                         Margin="5,0,15,0">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Closed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <TextBlock Text="Start Date:" 
                          Style="{StaticResource CustomLabelStyle}" 
                          Grid.Column="2"/>
                <DatePicker x:Name="dpFilterStartDate" 
                           Style="{StaticResource CustomDatePickerStyle}" 
                           Width="150" 
                           Grid.Column="3"
                           Margin="5,0,15,0"/>

                <Button x:Name="btnFilter" 
                       Content="Filter" 
                       Style="{StaticResource CustomButtonStyle}" 
                       Grid.Column="4"
                       Click="btnFilter_Click"/>
            </Grid>
        </Border>

        <!-- DataGrid hiển thị danh sách khóa học -->
        <DataGrid x:Name="dgCourses" 
                  Style="{StaticResource CustomDataGridStyle}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  Grid.Row="2" 
                  Grid.Column="0" 
                  SelectionChanged="dgCourses_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CourseId" Binding="{Binding CourseId}" Width="60"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="150"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="70"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="70"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
                <DataGridTextColumn Header="Approved" Binding="{Binding ApprovedCount}" Width="70"/>
                <DataGridTextColumn Header="Pending" Binding="{Binding PendingCount}" Width="70"/>
                <DataGridTextColumn Header="Rejected" Binding="{Binding RejectedCount}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khung CRUD -->
        <Border BorderThickness="1" 
                BorderBrush="#006B38" 
                CornerRadius="5" 
                Background="White" 
                Padding="10" 
                Margin="10" 
                Grid.Row="3" 
                Grid.Column="0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="3" BlurRadius="5"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Course Name:" Style="{StaticResource CustomLabelStyle}" Grid.Row="0" Grid.Column="0"/>
                <TextBox x:Name="txtCourseName" Style="{StaticResource CustomTextBoxStyle}" Width="200" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Start Date:" Style="{StaticResource CustomLabelStyle}" Grid.Row="1" Grid.Column="0"/>
                <DatePicker x:Name="dpStartDate" Style="{StaticResource CustomDatePickerStyle}" Width="200" Grid.Row="1" Grid.Column="1"/>

                <TextBlock Text="End Date:" Style="{StaticResource CustomLabelStyle}" Grid.Row="2" Grid.Column="0"/>
                <DatePicker x:Name="dpEndDate" Style="{StaticResource CustomDatePickerStyle}" Width="200" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Text="Status:" Style="{StaticResource CustomLabelStyle}" Grid.Row="3" Grid.Column="0"/>
                <ComboBox x:Name="cbStatus" Style="{StaticResource CustomComboBoxStyle}" Width="200" Grid.Row="3" Grid.Column="1">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Closed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <!-- Các nút CRUD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="2" Margin="10">
                    <Button x:Name="btnAdd" Content="Add" Style="{StaticResource CustomButtonStyle}" Click="btnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Update" Style="{StaticResource CustomButtonStyle}" Click="btnUpdate_Click"/>
                    <Button x:Name="btnDelete" Content="Delete" Style="{StaticResource CustomButtonStyle}" Click="btnDelete_Click"/>
                    <Button x:Name="btnRefresh" Content="Refresh" Style="{StaticResource CustomButtonStyle}" Click="btnRefresh_Click"/>
                    <Button x:Name="btnRegistration" Content="Registration" Style="{StaticResource CustomButtonStyle}" Click="btnRegistration_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>