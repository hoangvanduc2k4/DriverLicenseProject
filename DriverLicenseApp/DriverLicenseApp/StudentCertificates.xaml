<Window x:Class="DriverLicenseApp.StudentCertificates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="My Certificates" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="AliceBlue">
        <!-- Định nghĩa 3 hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Label -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: StackPanel -->
            <RowDefinition Height="*"/>
            <!-- Row 3: DataGrid -->
        </Grid.RowDefinitions>

        <!-- Row 1: Label "List Exam" -->
        <Label Content="My Certificates" Grid.Row="0" 
       HorizontalAlignment="Center" VerticalAlignment="Center"
       FontSize="24" FontWeight="Bold" Margin="10"/>

        <!-- Row 3: DataGrid hiển thị danh sách kỳ thi -->
        <DataGrid x:Name="certificatesDataGrid" Grid.Row="2" Margin="10" AutoGenerateColumns="False" IsReadOnly="true">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Certificate ID" Binding="{Binding CertificateId}" Width="80"/>
                <DataGridTextColumn Header="IssuedDate" Binding="{Binding IssuedDate}" Width="120"/>
                <DataGridTextColumn Header="ExpirationDate" Binding="{Binding ExpirationDate}" Width="120"/>
                <DataGridTextColumn Header="CertificateCode" Binding="{Binding CertificateCode}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
