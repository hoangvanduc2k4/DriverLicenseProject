<Window x:Class="DriverLicenseApp.ListUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="ListUser" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Dành cho Label -->
            <RowDefinition Height="*" />
            <!-- Dành cho DataGrid -->
        </Grid.RowDefinitions>

        <!-- Label hiển thị tiêu đề -->
        <Label Content="List User"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Margin="10"/>

        <!-- DataGrid hiển thị danh sách user -->
        <DataGrid x:Name="UserDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="Auto"/>
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName, TargetNullValue=''}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email, TargetNullValue=''}" Width="2*"/>
                <DataGridTextColumn Header="SĐT" Binding="{Binding Phone, TargetNullValue=''}" Width="Auto"/>
                <DataGridTextColumn Header="Lớp" Binding="{Binding Class, TargetNullValue=''}" Width="Auto"/>
                <DataGridTextColumn Header="Trường" Binding="{Binding School, TargetNullValue=''}" Width="*"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
