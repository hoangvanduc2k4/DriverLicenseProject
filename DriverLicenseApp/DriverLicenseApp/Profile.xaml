<Window x:Class="DriverLicenseApp.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="Profile" Height="510" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <!-- Grid định nghĩa các hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- Hàng cho Form -->
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho Button -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề Profile -->
        <Label Content="Profile" Grid.Row="0"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>

        <!-- Phần Form nhập liệu -->
        <StackPanel Grid.Row="1" Margin="20,0,20,0">
            <!-- Full Name -->
            <TextBlock Text="Full Name" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtName" Height="30" FontSize="14" Padding="5" 
                     BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <!-- Email -->
            <TextBlock Text="Email" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtMail" Height="30" FontSize="14" Padding="5" 
                     BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <!-- Phone -->
            <TextBlock Text="Phone" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtPhone" Height="30" FontSize="14" Padding="5" 
                     BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <!-- Class (chỉ dành cho học sinh) -->
            <TextBlock Text="Class" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtClass" Height="30" FontSize="14" Padding="5" 
                     BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <!-- School (chỉ dành cho học sinh) -->
            <TextBlock Text="School" FontSize="14" Margin="0,10,0,5"/>
            <TextBox x:Name="txtSchool" Height="30" FontSize="14" Padding="5" 
                     BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>
        </StackPanel>

        <!-- Nút Update Profile -->
        <Button Content="Update Profile" Grid.Row="2" Margin="20,10,20,20"
                Height="35" FontSize="14"  
                 Click="UpdateButton_Click"/>
    </Grid>
</Window>
