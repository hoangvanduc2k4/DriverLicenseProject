<Window x:Class="DriverLicenseApp.StudentRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="StudentRegistration" Height="550" Width="800" Background="AliceBlue" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">

        <!-- Định nghĩa hàng và cột -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng mới cho ô tìm kiếm -->
            <RowDefinition Height="1.6*"/>
            <!-- DataGrid -->
            <RowDefinition Height="1*"/>
            <!-- Khu vực CRUD -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Margin="10" Grid.Row="0" Grid.Column="0">

            <!-- Phần tìm kiếm nằm bên trái -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Registration" VerticalAlignment="Center" Margin="5 0 0 0"  FontSize="20" FontWeight="Bold"/>

            </StackPanel>
        </DockPanel>



        <!-- DataGrid hiển thị danh sách khóa học -->
        <DataGrid x:Name="dgCourses" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" 
              Grid.Row="1" Grid.Column="0" SelectionChanged="dgCourses_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CourseId" Binding="{Binding CourseId}" Width="60"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="150"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate}" Width="70"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding EndDate}" Width="70"/>
                <DataGridTextColumn Header="Teacher" Binding="{Binding TeacherName}" Width="150"/>
                <DataGridTextColumn Header="IsRegistered" Binding="{Binding IsRegistered}" Width="80"/>
                <DataGridTextColumn Header="RegistrationStatus" Binding="{Binding RegistrationStatus}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khung CRUD -->
        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="White" Padding="5" Margin="5"
            Grid.Row="2" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Thêm hàng cho Teacher -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hàng Comments -->
                <TextBlock Text="Comments:" FontWeight="SemiBold" Margin="0,0,0,3" Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtComments" TextWrapping="Wrap" AcceptsReturn="True" Grid.Row="2" Grid.Column="1" Margin="71,14,23,55" Grid.RowSpan="2"/>

                <!-- Các nút CRUD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3" Grid.ColumnSpan="2" Margin="10,70,10,10">
                    <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="5" Click="btnCancel_Click"/>
                    <Button x:Name="btnRegistration" Content="Registration" Width="100" Margin="5" Click="btnRegistration_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
