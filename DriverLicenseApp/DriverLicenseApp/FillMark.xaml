<Window x:Class="DriverLicenseApp.FillMark"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fill Mark" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="aliceblue">
        <!-- Chia layout thành 3 hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- Hàng tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Form nhập điểm -->
        </Grid.RowDefinitions>
        <!-- Hàng 1: Tiêu đề + Nút Export + Nút Import -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblName" FontSize="20" FontWeight="Bold"
           HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>

            <Button x:Name="btnExportCSV" Content="Export" Width="80" Height="30"
            HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"
            Click="btnExportCSV_Click" Grid.Column="1"/>

            <Button x:Name="btnImportCSV" Content="Import" Width="80" Height="30"
            HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"
            Grid.Column="2" Click="btnImportCSV_Click"/>
        </Grid>

        <!-- Hàng 2: DataGrid hiển thị danh sách học sinh -->
        <DataGrid x:Name="dgStudents" Grid.Row="1" AutoGenerateColumns="False"
                  SelectionMode="Single" SelectionChanged="dgStudents_SelectionChanged"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="StudentID" Binding="{Binding UserId}" Width="80"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding User.FullName}" Width="200"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="60"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Hàng 3: Form nhập điểm -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
                <!-- StudentID nhỏ lại -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <!-- Full Name giữ nguyên -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
                <!-- Score nhỏ lại -->
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <!-- Notes mở rộng -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- StudentID -->
            <Label Content="StudentID:" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox x:Name="txtStudentID" Grid.Column="1" Width="40" IsReadOnly="True" />

            <!-- Full Name -->
            <Label Content="Full Name:" Grid.Column="2" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFullName" Grid.Column="3" Width="150" IsReadOnly="True" />

            <!-- Score -->
            <Label Content="Score:" Grid.Column="4" VerticalAlignment="Center"/>
            <TextBox x:Name="txtScore" Grid.Column="5" Width="50"/>

            <!-- Notes -->
            <Label Content="Notes:" Grid.Column="6" VerticalAlignment="Center"/>
            <TextBox x:Name="txtNotes" Grid.Column="7" Height="25" Margin="0 0 10 0" />

            <!-- Button Save -->
            <Button x:Name="btnSave" Content="Save" Grid.Column="8" Width="80" Click="btnSave_Click"/>
        </Grid>
    </Grid>
</Window>
