<Window x:Class="DriverLicenseApp.StudentCourses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="My Courses" Height="550" Width="800" Background="AliceBlue" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">

        <!-- Định nghĩa hàng và cột -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng mới cho ô tìm kiếm -->
            <RowDefinition Height="1.6*"/>
            <!-- DataGrid -->
            <RowDefinition Height="1*"/>
            <!-- Khu vực CRUD -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DockPanel Margin="10" Grid.Row="0" Grid.Column="0">

            <!-- Phần tìm kiếm nằm bên trái -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="My Courses " VerticalAlignment="Center" Margin="5 0 0 0"  FontSize="20" FontWeight="Bold"/>

            </StackPanel>
        </DockPanel>



        <!-- DataGrid hiển thị danh sách khóa học -->
        <DataGrid x:Name="dgCourses" AutoGenerateColumns="False" Margin="10" IsReadOnly="True" 
              Grid.Row="1" Grid.Column="0" SelectionChanged="dgCourses_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CourseId" Binding="{Binding CourseId}" Width="60"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding Course.CourseName}" Width="280"/>
                <DataGridTextColumn Header="Start Date" Binding="{Binding Course.StartDate}" Width="90"/>
                <DataGridTextColumn Header="End Date" Binding="{Binding Course.EndDate}" Width="90"/>
                <DataGridTextColumn Header="Teacher" Binding="{Binding Course.Teacher.FullName}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Course.Status}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Khung CRUD -->
        <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="5" Background="White" Padding="5" Margin="5"
            Grid.Row="2" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Thêm hàng cho Teacher -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="Course Name:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
                <TextBox x:Name="txtCourseName" Width="200" Grid.Row="1" Grid.Column="1" Margin="1"/>

                <TextBlock Text="Start Date:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
                <DatePicker x:Name="dpStartDate" Width="200" Grid.Row="2" Grid.Column="1" Margin="1"/>

                <TextBlock Text="End Date:" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
                <DatePicker x:Name="dpEndDate" Width="200" Grid.Row="3" Grid.Column="1" Margin="1"/>

                <TextBlock Text="Status:" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
                <ComboBox x:Name="cbStatus" Width="200" Grid.Row="4" Grid.Column="1" Margin="1">
                    <ComboBoxItem Content="Active"/>
                    <ComboBoxItem Content="Closed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <!-- Các nút CRUD -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="2" Margin="10">
                    <Button x:Name="btnMark" Content="View mark" Width="100" Margin="5" Click="btnMark_Click"/>
                    <Button x:Name="btnExam" Content="View exam" Width="100" Margin="5" Click="btnExam_Click"/>
                    <Button x:Name="btnCertificate" Content="View Certificate" Width="100" Margin="5" Click="btnCertificate_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
