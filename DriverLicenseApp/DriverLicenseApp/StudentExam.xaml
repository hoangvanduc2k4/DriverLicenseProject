<Window x:Class="DriverLicenseApp.StudentExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="My Exam" 
        Height="500" 
        Width="800" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid Background="#CEFAE3">
        <Grid.Resources>
            <!-- Style cho TextBlock -->
            <Style x:Key="CustomLabelStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="Margin" Value="0,0,5,5"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- Style cho Button -->
            <Style x:Key="CustomButtonStyle" TargetType="Button">
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Background" Value="#B2E3C4"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#A1D1B7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#8CB89F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style riêng cho nút Close -->
            <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource CustomButtonStyle}">
                <Setter Property="Background" Value="#FF6B6B"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF8787"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF5252"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Style cho DataGrid -->
            <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
                <Setter Property="BorderBrush" Value="#006B38"/>
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="#006B38"/>
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </Grid.Resources>

        <!-- Định nghĩa 3 hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Tiêu đề + Nút Close -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: (Dự phòng nếu cần thêm chức năng) -->
            <RowDefinition Height="*"/>
            <!-- Row 3: DataGrid -->
        </Grid.RowDefinitions>

        <!-- Row 1: Tiêu đề "My Exams" và Nút Close -->
        <DockPanel Grid.Row="0" Margin="10">

            <TextBlock Text="My Exams" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="#006B38"/>
        </DockPanel>

        <!-- Row 3: DataGrid hiển thị danh sách kỳ thi -->
        <DataGrid x:Name="examDataGrid" 
                  Grid.Row="2" 
                  Style="{StaticResource CustomDataGridStyle}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Exam ID" Binding="{Binding ExamId}" Width="80"/>
                <DataGridTextColumn Header="Course Name" Binding="{Binding Exam.Course.CourseName}" Width="150"/>
                <DataGridTextColumn Header="Exam Date" Binding="{Binding Exam.ExamDate}" Width="120"/>
                <DataGridTextColumn Header="Exam Time" Binding="{Binding Exam.ExamTime}" Width="100"/>
                <DataGridTextColumn Header="Duration Minutes" Binding="{Binding Exam.DurationMinutes}" Width="120"/>
                <DataGridTextColumn Header="Room" Binding="{Binding Exam.Room}" Width="60"/>
                <DataGridTextColumn Header="Teacher Supervisor" Binding="{Binding Exam.User.FullName}" Width="150"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" Width="80"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                <DataGridTextColumn Header="Note" Binding="{Binding Notes}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>