<Window x:Class="DriverLicenseApp.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DriverLicenseApp"
        mc:Ignorable="d"
        Title="ChangePassword" Height="500" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="AliceBlue">
        <!-- Grid định nghĩa các hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho tiêu đề -->
            <RowDefinition Height="*"/>
            <!-- Hàng cho Form -->
            <RowDefinition Height="Auto"/>
            <!-- Hàng cho Button -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề Profile -->
        <Label Content="Change Password" Grid.Row="0"
           HorizontalAlignment="Center" VerticalAlignment="Center"
           FontSize="20" FontWeight="Bold" Margin="0,20,0,10"/>

        <!-- Phần Form nhập liệu -->
        <StackPanel Grid.Row="1" Margin="20,0,20,148">
            <TextBlock Text="Old password" FontSize="14" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtOldPass" Height="30" FontSize="14" Padding="5" 
                 BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <TextBlock Text="New password" FontSize="14" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtNewPass" Height="30" FontSize="14" Padding="5" 
                 BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

            <TextBlock Text="Confirm new password" FontSize="14" Margin="0,10,0,5"/>
            <PasswordBox x:Name="txtConfirmNewPass" Height="30" FontSize="14" Padding="5" 
                 BorderBrush="#D3D3D3" BorderThickness="1" Background="White" Margin="0,0,0,5"/>

        </StackPanel>

        <!-- Nút Update Profile -->
        <Button Content="Change Password" Grid.Row="1" Margin="20,263,20,79"
            Height="35" FontSize="14"  
             Click="ChangePass_Click"/>
    </Grid>
</Window>
